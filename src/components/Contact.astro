<section id="contact" class="bg-slate-50 py-32">
  <div class="max-w-7xl mx-auto px-6">

    <!-- Header -->
    <div class="max-w-3xl mb-20">
      <p class="text-sm uppercase tracking-widest text-blue-700 font-semibold mb-4">
        Hubungi Kami
      </p>

      <h2 class="text-4xl font-bold text-blue-900 mb-6">
        Diskusikan Kebutuhan Alat Kesehatan Anda
      </h2>

      <p class="text-lg text-gray-700 leading-relaxed">
        Tim PT ENS Pilar Medika siap membantu pengadaan dan konsultasi
        alat kesehatan untuk fasilitas medis Anda secara profesional
        dan responsif.
      </p>
    </div>

    <!-- Contact Cards -->
    <div class="grid md:grid-cols-3 gap-10">

      <!-- Address -->
      <div class="bg-white border border-slate-200 rounded-2xl p-8 shadow-sm">
        <h3 class="text-lg font-semibold text-blue-900 mb-4">
          Alamat Kantor
        </h3>
        <p class="text-gray-700 leading-relaxed">
          Jl Sukses<br />
          Batam, Kepulauan Riau
        </p>
      </div>

      <!-- WhatsApp -->
      <div class="bg-white border border-slate-200 rounded-2xl p-8 shadow-sm">
        <h3 class="text-lg font-semibold text-blue-900 mb-4">
          WhatsApp
        </h3>
        <p class="text-gray-700 mb-6">
          Hubungi kami untuk respon cepat dan konsultasi langsung.
        </p>
        <a
          href="https://wa.me/628XXXXXXXXXX"
          target="_blank"
          class="inline-flex items-center justify-center bg-blue-800 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-900 transition"
        >
          Hubungi via WhatsApp
        </a>
      </div>

      <!-- Email -->
      <div class="bg-white border border-slate-200 rounded-2xl p-8 shadow-sm">
        <h3 class="text-lg font-semibold text-blue-900 mb-4">
          Email
        </h3>
        <p class="text-gray-700 mb-6">
          Untuk komunikasi formal dan kerja sama.
        </p>
        <a
          href="mailto:info@contoh.com"
          class="text-blue-800 font-semibold hover:underline"
        >
          info@contoh.com
        </a>
      </div>

    </div>

  </div>
</section>
